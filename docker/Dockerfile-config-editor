FROM python:3.10-slim

WORKDIR /app

# 安装依赖
RUN apt-get update && \
    apt-get install -y --no-install-recommends gcc && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# 复制配置编辑器代码
COPY config_editor/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 复制项目代码
COPY . .

# 创建符号链接或者复制配置编辑器到适当位置
RUN cp -r config_editor /app_config_editor

WORKDIR /app_config_editor

EXPOSE 5000

CMD ["python", "app.py"]